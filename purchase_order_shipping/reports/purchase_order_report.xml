<odoo>
    <template id="report_purchaseorder_document_shipping_date" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//thead/tr/th[@name='th_description']" position="after">
            <th name="th_date_planned" class="text-end"><strong>Expected Arrival</strong></th>
            <th name="th_shipping_date" class="text-end"><strong>Shipping Date</strong></th>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_discount']" position="replace"/>
        <xpath expr="//td[@id='product']" position="after">
            <td class="text-end">
                <span t-field="line.date_planned"/>
            </td>
            <td class="text-end">
                <span t-field="line.shipping_date"/>
            </td>
        </xpath>
        <xpath expr="//td[.//span[@t-field='line.discount']]" position="replace"/>
    </template>
</odoo>