<odoo>
    <record id="purchase_order_shipping_date_view" model="ir.ui.view">
        <field name="name">purchase.order.form.shipping.date.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='date_planned']" position="after">
                <field name="shipping_date" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
