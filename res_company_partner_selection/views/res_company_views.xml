<odoo>
    <record id="res_company_form_inherit_partner_id" model="ir.ui.view">
        <field name="name">res.company.form.inherit.partner.id</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id" string="Contact" domain="[('is_company','=',True)]" readonly="0" groups=""/>
            </xpath>
        </field>
    </record>
</odoo>