<odoo>
    <template id="subscription_report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//thead/tr" position="replace">
            <tr>
                <th name="th_description" class="text-start"><span>Description</span></th>
                <th name="th_subtotal" class="text-end"><span>Amount</span></th>
                <th name="th_taxes" class="text-end"><span>Taxes</span></th>
            </tr>
        </xpath>

        <xpath expr="//td[@name='td_quantity']" position="replace"/>
        <xpath expr="//td[@name='td_price_unit']" position="replace"/>

        <xpath expr="//td[@name='td_subtotal']" position="replace"/>
        <xpath expr="//td[@name='td_taxes']" position="replace"/>

        <xpath expr="//td[@name='account_invoice_line_name']" position="after">
            <td name="td_subtotal" class="text-end o_price_total">
                <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
            </td>
        </xpath>

        <xpath expr="//td[@name='td_subtotal']" position="after">
            <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                <td name="td_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                    <span t-out="taxes" id="line_tax_ids">Tax 15%</span>
                </td>
        </xpath>

        <xpath expr="//div[p[@name='payment_communication']]" position="replace"/>


        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>

        <xpath expr="//div[@id='informations']" position="after">
            <div id="informations" name="informations_left" style="float: left;width: 35%;">
                <div/>
                <div t-if="o.invoice_date" name="sub_invoice_date">
                    <strong>Invoice Date: </strong>
                    <span t-field="o.invoice_date"/>
                </div>
                <div t-if="o.invoice_date_due" name="sub_due_date">
                    <strong>Due Date: </strong>
                    <span t-field="o.invoice_date_due"/>
                </div>
                <div t-if="o.partner_id.ref" name="client_ref">
                    <strong>Client Ref.: </strong>
                    <span t-field="o.partner_id.ref"/>
                </div>
            </div>
            <div id="informations" name="informations_right" style="float: left;margin-left: 70px !important;width: 45%;margin-bottom: 24px !important;">
                <div/>
                <div t-if="o.police" name="policy_number">
                    <strong>Policy: </strong>
                    <span t-field="o.police"/>
                </div>
                <div name="subscription_start_date">
                    <t t-set="subscription_start_date" t-value="o.line_ids.mapped('sale_line_ids.order_id').filtered(lambda x: x.start_date)"/>
                    <t t-if="subscription_start_date">
                        <strong>Effective Date: </strong>
                        <span t-esc="subscription_start_date[0].start_date"/>
                    </t>
                </div>
                <div name="subscription_end_date">
                    <t t-set="subscription_end_date" t-value="o.line_ids.mapped('sale_line_ids.order_id').filtered(lambda x: x.end_date)"/>
                    <t t-if="subscription_end_date">
                        <strong>Expiry Date: </strong>
                        <span t-esc="subscription_end_date[0].end_date"/>
                    </t>
                </div>
                <div t-if="o.insurance_provider_id" name="insurance_provider">
                    <strong>Insurance Provider: </strong>
                    <span t-field="o.insurance_provider_id"/>
                </div>
            </div>


        </xpath>





    </template>
</odoo>